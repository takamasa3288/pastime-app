<%= form_with(model: tweet, local: true) do |f| %>
  <div class="field">
    <%= f.label :content, "趣味についての紹介" %><br />
    <%= f.text_area :content %>
  </div>

  <div class="weight-bold-text">
    趣味のカテゴリ選択
    <span class="indispensable">必須</span>
  </div>
        <%= f.collection_select(:pastime_id, Pastime.all, :id, :name, {}, {class:"select-box", id:"pastime"}) %>

  <div class="field">
    <%= f.label :image, "趣味の画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="submit">
    <%= f.submit "投稿する", class: :form__btn  %>
    <%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>
<% end %>